@model DQueensFashion.Models.ViewOrderViewModel
@{
    ViewBag.Title = "Order Details";
    Layout = "~/Views/Shared/_dashboardLayout.cshtml";
}

<div class="card">
    <div class="card-body">
        <div class="orderdetails-card-header">
            ORDER DETAILS
        </div>
        <div class="orderdetails-card-body">
            <div class="mb-3">
                <div class="orderdetails-customer-main-info">CUSTOMER : @Model.CustomerName</div>
                <div class="orderdetails-customer-info">PHONE : @Model.CustomerPhone</div>
                <div class="orderdetails-customer-info">ADDRESS : @Model.CustomerAddress</div>
                <div class="orderdetails-customer-info">QUANTITY : @Model.TotalQuantity</div>
                <div class="orderdetails-customer-info"> DATE : @Model.DateCreatedString</div>
                <div class="orderdetails-customer-info">STATUS : @Model.OrderStatus</div>
                <div class="orderdetails-customer-info">SUBTOTAL : $@Model.SubTotal</div>
                <div class="orderdetails-customer-info">SHIPPING : $@Model.ShippingPrice</div>
                <div class="orderdetails-customer-main-info">TOTAL : $@Model.TotalAmount</div>
            </div>
            <hr />
            <div class="orderdetails-items-in-order">
                ITEMS IN ORDER
                <hr class="m-1" />
            </div>

            @foreach (var item in Model.LineItems)
            {
                <div class="row">
                    <div class="col-3 col-md-2">
                        <img src="@Url.Content(item.ProductImage)" class="orderdetails-product-image" alt="order_details_image_btn_houseofdqeens"/>
                    </div>
                    <div class="col-9 col-md-10">
                        @item.ProductName 
                        <div class="orderdetails-unitprice">$@item.UnitPrice * @item.Quantity</div>
                        <div class="orderdetails-totalamouont">$@item.TotalAmount</div>
                    </div>
                </div>

              
                <hr class="m-1" />
            }



        </div>


    </div>
</div>
