@model IEnumerable<DQueensFashion.Models.ViewCategoryViewModel>
@using DQueensFashion.Utilities

@{
    ViewBag.Title = "Categories";
    Layout = "~/Views/Shared/_dashboardLayout.cshtml";
}


<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <div>
            <div class="category-table-add-category-btn">
                <a href="@Url.Action("AddCategory")" class="btn primary-table-button btn-sm">
                    <i class="fas fa-plus"></i>
                    Add new
                </a>

            </div>
        </div>
        @using (Html.BeginForm())
        {
            <div class="card box-shadow">
                <div class="card-header">
                    <h3 class="card-title">Categories</h3>
                    <div class="card-tools">
                        <div class="input-group input-group-sm">
                            <input type="text" name="query" class="form-control float-right" value="@ViewBag.Query" placeholder="Search">

                            <div class="input-group-append">
                                <button type="submit" class="btn btn-default table-search-btn">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>

                    </div>

                </div>
                <!-- /.card-header -->
                <div class="card-body table-responsive p-0 custom-table">
                    <table class="table table-head-fixed  table-striped" id="categoriesTable">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="category-table-category-name">
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td class="float-right">
                                        @{
                                            if (item.Id != AppConstant.OutfitsId)
                                            {
                                                <a href="@Url.Action("EditCategory", new {id=item.Id})" , class="primary-table-button btn-xs">
                                                    <i class="fas fa-pencil-alt"></i>
                                                </a>

                                                <button type="button" class="btn delete-btn btn-xs" onclick="ShowDeleteCategory(@item.Id)">
                                                    <i class="far fa-trash-alt"></i>
                                                </button>
                                            }
                                        }

                                    </td>
                                </tr>

                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        }

    </div>
</div>

