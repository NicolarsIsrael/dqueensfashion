@model DQueensFashion.Models.RequestsReplyViewModel
@{
    ViewBag.Title = "CreateNewsLetter";
    Layout = "~/Views/Shared/_dashboardLayout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model=>Model.ProductId)
    <h4>Product now available, reply customers</h4>
    <div class="row mt-lg-4 mt-2">
        <div class="col-md-6">
            <div class="card box-shadow">
                <div class="card-header">
                    <div class="row">
                        <div class="col-lg-2 col-3 p-1">
                            <img src="@Url.Content(Model.MainImage)" style="height:70px;width:70px" alt="@Model.Product.Name _image_houseofdqueens" />
                        </div>
                        <div class="col-lg- 10 col-9 p-1">
                            <div class="">
                                @Model.Product.Name
                            </div>
                            <div class="">Category: @Model.Product.Category.Name</div>
                        </div>

                    </div>
                </div>
                <div class="card-body">

                    <div class="form-horizontal">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-12" })
                            <div class="col-12">
                                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Message, htmlAttributes: new { @class = "control-label col-12" })
                            <div class="col-12">
                                @Html.TextAreaFor(model => model.Message, new { @class = "form-control", @rows = 5, })
                                @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-12">
                                <button type="submit" class="btn primary primary-table-button btn-block m-0">
                                    Send
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="mb-2">
                <input type="button" class="btn primary-table-button btn-sm m-0 mr-2" value="Check all" onclick="selectAllEmail()" />
                <input type="button" class="btn secondary-table-button btn-sm m-0" value="Uncheck all" onclick="UnSelectAllEmail()" />
            </div>
            <div class="card  box-shadow">
                <div class="card-header">
                    Send to
                </div>
                <div class="card-body">
                    @for (int i = 0; i < Model.EmailList.Count; i++)
                    {
                        <div class="checkbox">
                            @Html.CheckBoxFor(m => Model.EmailList[i].IsSelected, htmlAttributes: new { @class = "email-checkbox" })
                            <span>@Model.EmailList[i].Email</span>
                            @Html.HiddenFor(m => Model.EmailList[i].Email)
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>



}




<script type="text/javascript">
    function selectAllEmail() {
        var items = document.getElementsByClassName('email-checkbox');
        for (var i = 0; i < items.length; i++) {
            if (items[i].type == 'checkbox')
                items[i].checked = true;
        }
    }

    function UnSelectAllEmail() {
        var items = document.getElementsByClassName('email-checkbox');
        for (var i = 0; i < items.length; i++) {
            if (items[i].type == 'checkbox')
                items[i].checked = false;
        }
    }
</script>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
