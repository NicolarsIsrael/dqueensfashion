@model DQueensFashion.Models.GeneralValuesViewModel

@{
    ViewBag.Title = "GeneralValues";
    Layout = "~/Views/Shared/_dashboardLayout.cshtml";
}

<script src="~/Content/js/jquery.js"></script>
<div class="card mx-auto mt-lg-4 mt-2 box-shadow admin-generaldetails-card">
    <div class="card-body">
        @using (Html.BeginForm("GeneralDetails","Admin", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>GENERAL DETAILS</h4>
            <hr />
            @Html.HiddenFor(model => model.GeneralValId)
            <input type="hidden" value="@ViewBag.Success" id="successMessage" />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(model => model.NewsLetterSubscriptionDiscount, htmlAttributes: new { @class = "control-label col-12" })
                <div class="col-12">
                    @Html.EditorFor(model => model.NewsLetterSubscriptionDiscount, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NewsLetterSubscriptionDiscount, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.UsaShippingPrice, htmlAttributes: new { @class = "control-label col-12" })
                <div class="col-12">
                    @Html.EditorFor(model => model.UsaShippingPrice, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.UsaShippingPrice, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.OtherShippingPrice, htmlAttributes: new { @class = "control-label col-12" })
                <div class="col-12">
                    @Html.EditorFor(model => model.OtherShippingPrice, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.OtherShippingPrice, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.OutfitMainImage, htmlAttributes: new { @class = "control-label col-12" })
                <div class="col-12">
                    <input type="file" name="OutfitMainImage" class="form-control" accept="image/x-png,image/gif,image/jpeg">
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-12">
                    <button type="submit" class="btn m-0 primary-table-button">
                        <i class="fas fa-pencil-alt"></i>
                        Edit
                    </button>
                </div>
            </div>
        </div>
        }
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script>
    var successsMsg = document.getElementById("successMessage");
    function showSuccessMessage() {
        if (successsMsg.value == "success") {
            console.log("hellsssssso");
            ShowSnackbarSuccess("Details Updated");
        }
    }

    $(function () {
        showSuccessMessage();
    });
</script>
