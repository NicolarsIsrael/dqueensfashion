@model DQueensFashion.Models.GeneralValuesViewModel

@{
    ViewBag.Title = "GeneralValues";
    Layout = "~/Views/Shared/_dashboardLayout.cshtml";
}

<script src="~/Content/js/jquery.js"></script>
<div class="card mx-auto mt-2" style="width:400px">
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4 style="text-align:center">GENERAL DETAILS</h4>
                <hr />
                @Html.HiddenFor(model => model.GeneralValId)
                <input type="hidden" value="@ViewBag.Success" id="successMessage" />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
              
                <div class="form-group">
                    @Html.LabelFor(model => model.NewsLetterSubscriptionDiscount, htmlAttributes: new { @class = "control-label col-12" })
                    <div class="col-12">
                        @Html.EditorFor(model => model.NewsLetterSubscriptionDiscount, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NewsLetterSubscriptionDiscount, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn" style="background-color:#96157a;color:white">
                            <img src="~/Content/Images/edit.svg" />
                            Edit
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script>
    var successsMsg = document.getElementById("successMessage");
    function showSuccessMessage() {
        if (successsMsg.value == "success") {
            console.log("hellsssssso");
            ShowSnackbarSuccess("Details Updated");
        }
    }

    $(function () {
        showSuccessMessage();
    });
</script>
