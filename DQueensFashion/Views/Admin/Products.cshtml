@model IEnumerable<DQueensFashion.Models.ViewProductsViewModel>
@using DQueensFashion.Utilities

@{
    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/_dashboardLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="add-product-btn-div">
            <a href="@Url.Action("AddProduct")" class="btn btn-sm primary-table-button">
                <i class="fas fa-plus"></i>
                Add Product
            </a>
            <a href="@Url.Action("AddProduct","Admin",new { categoryId=AppConstant.OutfitsId})" class="btn btn-sm secondary-table-button mt-0">
                <i class="fas fa-plus"></i>
                @AppConstant.OutfitsName
            </a>
         
        </div>
        <div class="card box-shadow">
            <div class="card-header">
                <h3 class="card-title">Products</h3>
                <div class="card-tools">
                    <div class="input-group input-group-sm">
                        <input type="text" name="table_search" class="form-control float-right" id="search" placeholder="Search">
                        <div class="input-group-append">
                            <button type="submit" class="btn btn-default table-search-btn" onclick="SearchProductsTable()">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>

                </div>

            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0 custom-table">
                @Html.Partial("_productsTable", Model)
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>



<script>
    var search = document.getElementById("search");

    function SearchProductsTable() {
        $.ajax({
            url: '/Admin/SearchProducts',
            dataType: "html",
            data: { query: search.value },
            success: function (result) {

                $("#productsTable").html(result);
            },
            error: function (xhr, status, error) {
                ShowSnackbarError("Error");
            }
        });
    }
</script>