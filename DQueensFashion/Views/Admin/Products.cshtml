@model IEnumerable<DQueensFashion.Models.ViewProductsViewModel>
@using DQueensFashion.Utilities

@{
    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/_dashboardLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div>
            <div style="text-align:right;margin-bottom:10px;">
                <a href="@Url.Action("AddProduct")" class="btn btn-sm" , style="background-color:#96157a;color:white">
                    <img src="~/Content/Images/plus.svg" />
                    Add
                </a>
                <a href="@Url.Action("AddProduct","Admin",new { categoryId=AppConstant.ReadyMadeCategoryId})" class="btn btn-sm" , style="background-color:darkgoldenrod;color:white">
                    <img src="~/Content/Images/plus.svg" />
                    @AppConstant.ReadyMadeName
                </a>
                <a href="@Url.Action("AddProduct","Admin",new { categoryId=AppConstant.CustomMadeCategoryId})" class="btn btn-sm" , style="background-color:blue;color:white">
                    <img src="~/Content/Images/plus.svg" />
                     @AppConstant.CustomMadeName
                </a>

            </div>
            <div style="text-align:right;margin-bottom:10px;">
              

            </div>
            <div style="text-align:right;margin-bottom:10px;">
               
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Products</h3>


                <div class="card-tools">

                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control float-right" id="search" placeholder="Search">

                        <div class="input-group-append">
                            <button type="submit" class="btn btn-default" style="width:50px" onclick="SearchProductsTable()">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>

                </div>

            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0" style="height: 65vh">

                @Html.Partial("_productsTable", Model)
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>



<script>
    var search = document.getElementById("search");

    function SearchProductsTable() {
        $.ajax({
            url: '/Admin/SearchProducts',
            dataType: "html",
            data: { searchString: search.value },
            success: function (result) {

                $("#productsTable").html(result);
            },
            error: function (xhr, status, error) {
                alertify.error("Error");
            }
        });
    }
</script>