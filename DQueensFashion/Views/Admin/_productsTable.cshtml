@model IEnumerable<DQueensFashion.Models.ViewProductsViewModel>

<table class="table table-head-fixed  table-striped" id="productsTable">
    <thead>
        <tr>
            <th></th>
            <th>Name</th>
            <th>Price ($)</th>
            <th>Discount (%)</th>
            <th>Total ($)</th>
            <th>Qty</th>
            <th>Date created</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td style="width:80px">
                <img src="@Url.Content(item.MainImage)" style="width:50px;height:50px" />
            </td>
            <td class="product-name-desc" style="word-wrap:break-word;">

                <a href="@Url.Action("ProductDetails","Product",new { id = item.Id})" >
                    <div style="font-size:15px;font-weight:600;color:black">
                        @item.Name
                    </div>
                </a>
                <div style="font-size:15px;font-weight:400;color:#818181">@item.Category</div>
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Discount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubTotal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.Raw(item.DateCreatedString.Replace(Environment.NewLine, "<br/>"))
            </td>
            <td>
                <a href="@Url.Action("EditProduct",new {id=item.Id})" class="primary-table-button">
                    <img src="~/Content/Images/edit.svg" />
                </a>
                <a href="@Url.Action("ProductDetails",new {id = item.Id})" class="secondary-table-button">
                    <img src="~/Content/Images/info.svg" />
                </a>

            </td>
        </tr>

        }
    </tbody>
</table>


<style>
      .product-name-desc{
        max-width:300px;
    }


    
/*smart phones*/
@@media screen and (max-width: 420px) and (min-width: 0px) {
     .product-name-desc{
        max-width:200px;
    }
}

</style>
