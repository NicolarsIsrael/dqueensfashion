@model DQueensFashion.Models.EditCategoryViewModel

@{
    ViewBag.Title = "EditCategory";
    Layout = "~/Views/Shared/_dashboardLayout.cshtml";
}

<div class="card-center">
    <div class="card admin-editcategory-card">
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Edit Category</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)
                <div class="form-group">
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-12" })
                    <div class="col-12">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-12">
                        <button type="submit" class="btn m-0 primary-table-button">
                            <img src="~/Content/Images/edit.svg" alt="edit_category_btn_image_houseofdqueens"/>
                            Edit
                        </button>
                    </div>
                </div>
            </div>
            }
          

        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
