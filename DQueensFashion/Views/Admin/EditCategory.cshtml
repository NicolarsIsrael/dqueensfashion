@model DQueensFashion.Models.EditCategoryViewModel

@{
    ViewBag.Title = "EditCategory";
    Layout = "~/Views/Shared/_dashboardLayout.cshtml";
}


<div class="card-center">
    <div class="card" style="width:400px">
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4 style="text-align:center">Edit Category</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)
                <div class="form-group">
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-12" })
                    <div class="col-12">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn" style="background-color:#E97128;color:white">
                            <img src="~/Content/Images/edit.svg" />
                            Edit
                        </button>
                    </div>
                </div>
            </div>
            }
          

        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
