@model IEnumerable<DQueensFashion.Models.ViewOrderViewModel>

@{
    ViewBag.Title = "Orders";
    Layout = "~/Views/Shared/_dashboardLayout.cshtml";
}


<div class="row">
    <div class="col-12">

        @using (Html.BeginForm())
        {
            <div class="card mt-lg-4 mt-2 box-shadow">
                <div class="card-header">
                    <h3 class="card-title">All orders</h3>
                    <div class="card-tools">
                        <div class="input-group input-group-sm">
                            <input type="text" name="query" class="form-control float-right" id="search" placeholder="Search">
                            <div class="input-group-append">
                                <button type="submit" class="btn btn-default table-search-btn">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.card-header -->
                <div class="card-body table-responsive p-0 custom-table">
                    <table class="table table-head-fixed  table-striped" id="ordersTable">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Items (Qty)</th>
                                <th>Customer</th>
                                <th>Amt</th>
                                <th>Date</th>
                                <th>Status</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.OrderId)
                                    </td>
                                    <td>
                                        @{
                                            foreach (var lineItem in item.LineItems)
                                            {
                                                <p class="m-0">@lineItem.ProductName (@lineItem.Quantity) </p>
                                            }
                                        }
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CustomerName)
                                    </td>
                                    <td>
                                        $@Html.DisplayFor(modelItem => item.TotalAmount)
                                    </td>
                                    <td>
                                        @Html.Raw(item.DateCreatedString.Replace(Environment.NewLine, "<br/>"))
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.OrderStatus)
                                    </td>
                                    <td>

                                        <div onclick="UpdateStatus(@item.OrderId)" class="primary-table-button">
                                            <i class="fas fa-pencil-alt"></i>
                                        </div>
                                        <a href="@Url.Action("OrderDetails",new {id = item.OrderId})" class="secondary-table-button">
                                            <i class="fas fa-info"></i>
                                        </a>
                                    </td>
                                </tr>

                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        }
    </div>
</div>



<!--update order status modal-->
<div class="modal fade" id="updateOrder">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Update Order Status</h3>
                <a href="#" class="close" data-dismiss="modal">&times;</a>
            </div>
            <div class="modal-body" id="updateOrderBody">


            </div>


        </div>

    </div>

</div>


<script>
    function UpdateStatus(orderId) {
        var url = "/Admin/UpdateOrderStatus/" + orderId;

        $("#updateOrderBody").load(url, function () {
            $("#updateOrder").modal("show");

        })
    }

</script>