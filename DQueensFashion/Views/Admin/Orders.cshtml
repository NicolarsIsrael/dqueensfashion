@model IEnumerable<DQueensFashion.Models.ViewOrderViewModel>

@{
    ViewBag.Title = "Orders";
    Layout = "~/Views/Shared/_dashboardLayout.cshtml";
}



<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">All orders</h3>

                <div class="card-tools">
                    <div class="input-group input-group-sm">
                        <input type="text" name="table_search" class="form-control float-right" id="search" placeholder="Search">

                        <div class="input-group-append">
                            <button type="submit" class="btn btn-default table-search-btn" onclick="SearchOrderTable()">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0 custom-table">

                @Html.Partial("_ordersTable", Model)
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>



<!--update order status modal-->
<div class="modal fade" id="updateOrder">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Update Order Status</h3>
                <a href="#" class="close" data-dismiss="modal">&times;</a>
            </div>
            <div class="modal-body" id="updateOrderBody">


            </div>


        </div>

    </div>

</div>


<script>
    var search = document.getElementById("search");

    function UpdateStatus(orderId) {
        var url = "/Admin/UpdateOrderStatus/" + orderId;

        $("#updateOrderBody").load(url, function () {
            $("#updateOrder").modal("show");

        })
    }

    function SearchOrderTable() {
        $.ajax({
            url: '/Admin/SearchOrders',
            dataType: "html",
            data: { query: search.value },
            success: function (result) {

                $("#ordersTable").html(result);
            },
            error: function (xhr, status, error) {
                alertify.error("Error");
            }
        });
    }

</script>