@model DQueensFashion.Models.UpdateOrderStatusViewModel

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model=>model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.OrderStatus, htmlAttributes: new { @class = "control-label col-12" })
            <div class="col-12">
                @Html.EnumDropDownListFor(model => model.OrderStatus, htmlAttributes : new { @class = "form-control" } )
                @Html.ValidationMessageFor(model => model.OrderStatus, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-12">
                <input type="submit" value="Save" class="btn primary-table-button" />
            </div>
        </div>
    </div>
}
