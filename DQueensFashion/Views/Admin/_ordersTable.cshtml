@model IEnumerable<DQueensFashion.Models.ViewOrderViewModel>

<table class="table table-head-fixed  table-striped" id="ordersTable">
    <thead>
        <tr>
            <th>ID</th>
            <th>Items (Qty)</th>
            <th>Customer</th>
            <th>Total Amt</th>
            <th>Date</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderId)
                </td>
                <td>
                    @{
                        foreach (var lineItem in item.LineItems)
                        {
                            <p class="m-0">@lineItem.ProductName (@lineItem.Quantity) </p>
                        }
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerName)
                </td>
                <td>
                    $@Html.DisplayFor(modelItem => item.TotalAmount)
                </td>
                <td>
                    @Html.Raw(item.DateCreatedString.Replace(Environment.NewLine, "<br/>"))
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderStatus)
                </td>
                <td>
                    <a href="@Url.Action("OrderDetails",new { id=item.OrderId, returnUrl="Orders"})">
                        Order details
                    </a>
                    <button class="btn" style="background-color:#E97128;color:white" onclick="UpdateStatus(@item.OrderId)">Update status</button>

                </td>
            </tr>

        }
    </tbody>
</table>