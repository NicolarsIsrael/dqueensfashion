@model DQueensFashion.Models.ViewCartViewModel

<li class="nav-item dropdown">
    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        @Model.Count
    </a>
    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
        @foreach (var cartItem in Model.Carts)
        {
            <div class="dropdown-item" >
                <div class="dropdown-item-text">
                    @cartItem.Product.Name ( @cartItem.Quantity )
                    <img src="~/Content/Images/trash-2.svg" onclick="RemoveFromCart(@cartItem.Product.Id)" style="cursor:pointer"/>
                </div>
            </div>
        }

        <div class="dropdown-divider"></div>
        <a class="dropdown-item" href="#">CHECK OUT</a>
    </div>
</li>