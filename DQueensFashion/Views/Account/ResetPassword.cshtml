@model DQueensFashion.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
}

<div class="container body-content">
    <div class="card mx-auto my-3 login-card">
        <div class="card-header">
            <h4>Reset password</h4>
        </div>
        <div class="card-body">
            <div>

                @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Code)
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "col-12 control-label" })
                        <div class="col-12">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "col-12 control-label" })
                        <div class="col-12">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @id = "passwordInput"  })
                        </div>
                        <div class="showpasswordcontainer">
                            <span class="col-12 showpassword" onclick="ShowPassword()">
                                <span id="password-show-text" class="password-show-text">show</span>
                            </span>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-12 control-label" })
                        <div class="col-12">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", id = "ConfirmPasswordInput"  })
                        </div>
                        <div class="showpasswordcontainer">
                            <span class="col-12 showconfirmpassword" onclick="ShowConfirmPassword()">
                                <span id="confirm-password-show-text" class="confirm-password-show-text">show</span>
                            </span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-12">
                            <input type="submit" value="Reset password" class="btn" style="color:white;background-color:#df7204;border-radius:0" />
                        </div>
                    </div>

                }

            </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
