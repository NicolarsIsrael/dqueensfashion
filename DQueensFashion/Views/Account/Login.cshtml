@using DQueensFashion.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}



    <div class="container body-content">
        <div class="login-register-logo-div mx-auto mt-2">
            <img src="~/Content/Images/HDQ LOGO FINAL.png" alt="hdq_logo_houseofdqueens"/>
        </div>
        <div class="card mx-auto mb-5 mt-3 login-card">
            <div class="card-body">
                <section id="loginForm">

                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <h4 style="text-align:center">LOGIN</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <div class="col-12">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder="Email" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>
                      

                        <div class="form-group">
                            <div class="col-12">
                                <div class="input-group mb-3">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder="Password", @id = "passwordInput" })
                                    <div class="input-group-append">
                                        <div class="input-group-text showpassword" onclick="ShowPassword()">
                                            <span id="password-lock-icon" class="fas fa-eye"></span>
                                        </div>
                                    </div>

                                </div>
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <div class="checkbox">
                                    @Html.CheckBoxFor(m => m.RememberMe)
                                    @Html.LabelFor(m => m.RememberMe)
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-12">
                                <input type="submit" value="Log in" class="btn primary-custom-button" />
                            </div>
                        </div>
                        <div class="col-12">
                            <p class="m-0">
                                @Html.ActionLink("Forgot your password?", "ForgotPassword")
                            </p>
                            <p class="m-0">
                                @Html.ActionLink("Register as a new user", "Register")
                            </p>
                        </div>
                    }

                </section>
            </div>
        </div>
    </div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
