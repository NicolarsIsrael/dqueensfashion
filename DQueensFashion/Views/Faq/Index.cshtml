                    <span><i class="fas fa-plus-circle toggle-plus-icon" id="@togglePlusIconId"></i></span>
                    <span><i class="fas fa-minus-circle toggle-minus-icon" id="@toggleMinusIconId"></i></span>
                </a>
                <span class="faq-question">@AppConstant.faqPurchasingSupport[i, 0]</span>
                <hr class="my-1" />
                <div class="collapse" id="@href">
                    <div class="faq-answer-bodytext">

                        @Html.Raw(AppConstant.faqPurchasingSupport[i, 1].Replace(Environment.NewLine, "<br/>"))
                    </div>
                </div>
            </div>
        }

        <div class="faq-faq-header mb-3">Shipping and return</div>
        @for (int i = 0; i < AppConstant.faqShippingReturn.GetLength(0); i++)
        {
            string href = "question_shipping" + i.ToString();
            string togglePlusIconId = "togglePlusIcon_shipping" + i.ToString();
            string toggleMinusIconId = "toggleMinusIcon_shipping" + i.ToString();
            <div class="mb-3 mx-md-5 mx-sm-1">
                <a class="mr-3 faq-plus-button" data-toggle="collapse" href="#@href" role="button"
                   aria-expanded="false" aria-controls="collapseExample" onclick="ToggleIcon('@togglePlusIconId','@toggleMinusIconId')">
                    <span><i class="fas fa-plus-circle toggle-plus-icon" id="@togglePlusIconId"></i></span>
                    <span><i class="fas fa-minus-circle toggle-minus-icon" id="@toggleMinusIconId"></i></span>
                </a>
                <span class="faq-question">@AppConstant.faqShippingReturn[i, 0]</span>
                <hr class="my-1" />
                <div class="collapse" id="@href">
                    <div class="faq-answer-bodytext">

                        @Html.Raw(AppConstant.faqShippingReturn[i, 1].Replace(Environment.NewLine, "<br/>"))
                    </div>
                </div>
            </div>
        }



    </div>

<style>

    .toggle-minus-icon {
        color: #E97128;
        display: none;
    }

    .toggle-plus-icon {
        color: #E97128;
    }
</style>
