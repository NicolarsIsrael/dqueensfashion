@using Microsoft.AspNet.Identity
@using DQueensFashion.Utilities

<!DOCTYPE html>
<style>

    .card-center {
        margin-left: auto;
        margin-right: auto;
        align-items: center;
        display: flex;
        justify-content: center;
        height: 80vh;
    }

    .email-button, .password-button {
        max-width: 100%;
    }
</style>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title - HDQ</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <link href="~/Content/Dashboard/css/dashboard.css" rel="stylesheet" />
    <link href="~/Content/general.css" rel="stylesheet" />
    <link href="~/Content/Dashboard/css/dashboard-custom.css" rel="stylesheet" />
    <link href="https://use.fontawesome.com/releases/v5.0.4/css/all.css" rel="stylesheet">

</head>

<body class="hold-transition sidebar-mini" style="height:90vh">
    <style>
        .user-panel img {
            width: auto;
            max-width: 7rem;
            max-height: 7rem;
            height: 7rem;
            width: 7rem;
        }

        .user-panel {
            flex-direction: column;
        }
    </style>
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav" style="margin-right:auto">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#"><i class="fas fa-bars" style="padding-top: 0.5rem"></i></a>
                </li>

            </ul>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link navbar-link" href="@Url.Action("Index","Cart")">
                        <img src="~/Content/Images/shopping-black.svg" />
                        @Html.Partial("~/Views/Cart/_navbarCartNumber.cshtml")
                    </a>
                </li>
            </ul>

            @Html.Partial("_LoginPartial")
            @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
            {
                @Html.AntiForgeryToken()
                <ul class="navbar-nav">
                    <li class="nav-item"><a href="javascript:document.getElementById('logoutForm').submit()" class="nav-link navbar-link">Log out</a></li>
                </ul>
            }

        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary ">

            <!-- Sidebar -->
            <div class="sidebar">
                <div style="margin:auto;font-weight:400;color:white"></div>
                <div class="user-panel d-flex">
                    <div class="info m-auto">
                        <p class="d-block mt-1" style="color:white;font-weight:600">@User.Identity.Name</p>
                    </div>

                </div>
      
                <!-- Sidebar -->
                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu"
                        data-accordion="false">

                        @if (Request.IsAuthenticated)
                        {

                            if (User.IsInRole(AppConstant.AdminRole))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" href="@Url.Action("dashboard","Admin")">
                                        <img src="~/Content/Images/list.svg" />
                                        <p class="dashboard-sidenav-link">
                                            DASHBOARD
                                        </p>
                                    </a>

                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" href="@Url.Action("categories","Admin")">
                                        <img src="~/Content/Images/list (2).svg" />
                                        <p class="dashboard-sidenav-link">
                                            CATEGORIES
                                        </p>
                                    </a>

                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" href="@Url.Action("Products","Admin")">
                                        <i class="fas fa-th"></i>
                                        <p class="dashboard-sidenav-link">
                                            PRODUCTS
                                        </p>
                                    </a>

                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" href="@Url.Action("Customers","Admin")">
                                        <i class="fas fa-th"></i>
                                        <p class="dashboard-sidenav-link">
                                            CUSTOMERS
                                        </p>
                                    </a>

                                </li>

                                <li class="nav-item has-treeview">
                                    <a href="#" class="nav-link">
                                        <i class="fas fa-users"></i>
                                        <p class="dashboard-sidenav-link">
                                            ORDERS
                                            <i class="fas fa-angle-left right"></i>
                                        </p>
                                    </a>
                                    <ul class="nav nav-treeview">

                                        <li class="nav-item">
                                            <a class="nav-link" asp-area="" href="@Url.Action("Orders","Admin")">
                                                <i class="fas fa-calendar"></i>
                                                <p class="dashboard-sidenav-link">
                                                    ALL ORDERS
                                                </p>
                                            </a>

                                        </li>

                                        <li class="nav-item">
                                            <a class="nav-link" asp-area="" href="@Url.Action("ProcessingOrders","Admin")">
                                                <i class="fas fa-calendar"></i>
                                                <p class="dashboard-sidenav-link">
                                                    PROCESSING
                                                </p>
                                            </a>

                                        </li>

                                        <li class="nav-item">
                                            <a class="nav-link" asp-area="" href="@Url.Action("InTransitOrders","Admin")">
                                                <i class="fas fa-calendar"></i>
                                                <p class="dashboard-sidenav-link">
                                                    IN TRANSIT
                                                </p>
                                            </a>

                                        </li>

                                        <li class="nav-item">
                                            <a class="nav-link" asp-area="" href="@Url.Action("DeliveredOrders","Admin")">
                                                <i class="fas fa-calendar"></i>
                                                <p class="dashboard-sidenav-link">
                                                    DELIVERED
                                                </p>
                                            </a>

                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" asp-area="" href="@Url.Action("ReturnedOrders","Admin")">
                                                <i class="fas fa-calendar"></i>
                                                <p class="dashboard-sidenav-link">
                                                    RETURNED
                                                </p>
                                            </a>

                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" asp-area="" href="@Url.Action("CompletedOrders","Admin")">
                                                <i class="fas fa-calendar"></i>
                                                <p class="dashboard-sidenav-link">
                                                    COMPLETED
                                                </p>
                                            </a>

                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" asp-area="" href="@Url.Action("DeletedOrders","Admin")">
                                                <i class="fas fa-calendar"></i>
                                                <p class="dashboard-sidenav-link">
                                                    DELETED
                                                </p>
                                            </a>

                                        </li>
                                    </ul>

                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" href="@Url.Action("subscribedemails","Admin")">
                                        <img src="~/Content/Images/list.svg" />
                                        <p class="dashboard-sidenav-link">
                                            SUBSCRIBED EMAILS
                                        </p>
                                    </a>

                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" href="@Url.Action("generaldetails","Admin")">
                                        <img src="~/Content/Images/list.svg" />
                                        <p class="dashboard-sidenav-link">
                                            GENERAL VALUES
                                        </p>
                                    </a>

                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" href="@Url.Action("changepassword", "Admin")">
                                        <i class="fas fa-th"></i>
                                        <p class="dashboard-sidenav-link">
                                            CHANGE PASSWORD
                                        </p>
                                    </a>

                                </li>
                            }
                            else if (User.IsInRole(AppConstant.CustomerRole))
                            {

                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" href="@Url.Action("account", "customer")">
                                        <img src="~/Content/Images/list.svg" />
                                        <p class="dashboard-sidenav-link">
                                            ACCOUNT
                                        </p>
                                    </a>

                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" href="@Url.Action("wishlist", "customer")">
                                        <i class="fas fa-th"></i>
                                        <p class="dashboard-sidenav-link">
                                            WISH LIST
                                        </p>
                                    </a>

                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" href="@Url.Action("orders", "customer")">
                                        <i class="fas fa-th"></i>
                                        <p class="dashboard-sidenav-link">
                                            ORDERS
                                        </p>
                                    </a>

                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" href="@Url.Action("pendingreviews", "customer")">
                                        <i class="fas fa-th"></i>
                                        <p class="dashboard-sidenav-link">
                                            PENDING REVIEWS
                                        </p>
                                    </a>

                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" href="@Url.Action("changepassword", "customer")">
                                        <i class="fas fa-th"></i>
                                        <p class="dashboard-sidenav-link">
                                            CHANGE PASSWORD
                                        </p>
                                    </a>

                                </li>
                            }

                        }



                    </ul>

                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->

        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">

            <!-- Main content -->
            <div class="content">
                <div class="container-fluid" style="padding-top:20px;min-height:90vh">
                    @RenderBody()
                    <div id="sidenav" class="sidenav">
                        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
                        <div id="sidebarbody" style="padding:10px 20px;"></div>
                    </div>

                    <div id="snackbar-success"></div>
                    <div id="snackbar-error"></div>
                    <div id="snackbar-message"></div>
                </div>
                <!-- /.container-fluid -->
            </div>
            <!-- /.content -->

        </div>

        <!-- /.content-wrapper -->
        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
        </aside>
        <!-- /.control-sidebar -->

        <style>
            .main-footer {
                background-color: #343a40 !important;
                color: white !important;
            }

            @@media screen and (max-width: 2000px) and (min-width: 520px) {
                .main-footer {
                    margin-left: 0rem !important;
                }
            }
        </style>
    </div>
    <!-- Main Footer -->
    <footer style="max-width:100vw;overflow-x:hidden">
        @Html.Partial("_footer")
    </footer>

    <!-- ./wrapper -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <!-- REQUIRED SCRIPTS -->
    <script src="~/Content/js/site.js"></script>
    <script src="~/Content/Dashboard/js/main.js"></script>


</body>

</html>
