@using Microsoft.AspNet.Identity
@using DQueensFashion.Utilities

@if (Request.IsAuthenticated)
{
    <ul class="navbar-nav">

        @{
            if (User.IsInRole(AppConstant.AdminRole))
            {
                <li class="nav-item">
                    @Html.ActionLink("Dashboard", "Dashboard", "Admin", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "nav-link navbar-link" })
                </li>
            }
            else if (User.IsInRole(AppConstant.CustomerRole))
            {
                <li class="nav-item">
                    @Html.ActionLink("Account", "Account", "Customer", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "nav-link navbar-link" })
                </li>
            }
            else if (User.IsInRole(AppConstant.EmployeeRole))
            {
                <li class="nav-item">
                    @Html.ActionLink("Dashboard", "Dashboard", "Employee", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "nav-link navbar-link" })
                </li>
            }

        }

        @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
        {
            @Html.AntiForgeryToken()

            <li class="nav-item"><a href="javascript:document.getElementById('logoutForm').submit()" class="nav-link navbar-link">Log out</a></li>
        }
    </ul>

}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">
            @Html.ActionLink("Register", "Register", "Account", routeValues: null,
           htmlAttributes: new { id = "registerLink", @class = "nav-link btn navbar-register-btn  mr-md-2" })
        </li>
        <li class="nav-item">
            @Html.ActionLink("Log in", "Login", "Account", routeValues: null,
           htmlAttributes: new { id = "loginLink", @class = "nav-link btn navbar-login-btn" })
        </li>
    </ul>
}

<style>
    .navbar-register-btn,
    .navbar-login-btn{
        color:white;
        border-radius:0;
        margin:5px 0;
        padding:5px;
        transition: all ease 0.3s;
    }

    .navbar-register-btn{
        background-color:#df7204;
    }

    .navbar-login-btn{
        background-color:#96157a;
    }

    .navbar-register-btn:hover{
        background-color:#ff8d19;
        color:white;
    }

    .navbar-login-btn:hover{
        background-color:#9c3b8d;
        color:white;
    }

</style>