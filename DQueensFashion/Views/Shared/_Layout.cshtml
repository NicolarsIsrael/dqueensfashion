<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - HDQ</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/alertifyjs/alertify.min.css" rel="stylesheet" />
    <link href="~/Content/alertifyjs/themes/default.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.css">
    <link href="~/Content/general.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/jquery")
</head>
<body>
    <nav class="navbar navbar-expand-lg fixed-top">
        <a href="@Url.Action("Index","Home")">
            <img src="~/Content/Images/HDQ LOGO FINAL.png" class="navbar-logo" />
        </a>
        
        <ul class="navbar-nav flex-row ml-auto">
            <li class="nav-item ml-lg-3">
                <a class="nav-link navbar-link" href="@Url.Action("Dashboard","Customer")">
                    <img src="~/Content/Images/user-nav.svg" />
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link navbar-link" href="@Url.Action("Index","Cart")">
                    <img src="~/Content/Images/shopping-cart-nav.svg" />
                    @Html.Partial("~/Views/Cart/_navbarCartNumber.cshtml")
                </a>
            </li>
        </ul>
        <button class="navbar-toggler collapsed position-relative" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span></span>
            <span></span>
            <span></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            @using (Html.BeginForm("SearchShop", "Product", FormMethod.Post, new { @class = "card card-sm ml-auto search-form" }))
            {

                @Html.AntiForgeryToken()

                <div class="row no-gutters align-items-center navbar-search-div">
                    <!--end of col-->
                    <div class="col">
                        <input class="form-control form-control-sm form-control-borderless navbar-search-input" type="search" placeholder="Search here" name="query">
                    </div>
                    <!--end of col-->
                    <div class="col-auto">
                        <button class="btn btn-sm navbar-search-button" type="submit">
                            <img src="~/Content/Images/search.svg" />
                        </button>
                    </div>
                    <!--end of col-->
                </div>
            }

            <ul class="navbar-nav">
                <li class="nav-item">
                    @Html.ActionLink("Shop", "Index", "Product", new { area = "" }, new { @class = "nav-link navbar-link" })
                </li>
                <li class="nav-item dropdown mr-md-2 navbar-category">
                    <a class="nav-link navbar-link dropdown-toggle" id="navbarCategoriesDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <span class="navbar-category-name">Categories</span>
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarCategoriesDropdown">
                        @Html.Partial("~/Views/Home/_navbarCategories.cshtml")
                    </div>

                </li>
            </ul>

            @Html.Partial("_LoginPartial")
        </div>
    </nav>
    <div class="pagebackground">
        @RenderBody()
        <div id="sidenav" class="sidenav">
            <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
            <div id="sidebarbody" class="sidebarbody"></div>
        </div>

        <div id="snackbar-success"></div>
        <div id="snackbar-error"></div>
        <div id="snackbar-message"></div>
    </div>

    <footer>
        @Html.Partial("_footer")
    </footer>


    <!--modals-->
    <!--quick view product-->
    <div class="modal fade" id="productQuickView">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header px-4 py-2">
                    <a href="#" class="close" data-dismiss="modal">&times;</a>
                </div>
                <div class="modal-body" id="productQuickViewBody">


                </div>


            </div>

        </div>

    </div>



    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/alertify.min.js"></script>
    <script src="~/Content/js/site.js"></script>

</body>
</html>

