<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - HDQ</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/alertifyjs/alertify.min.css" rel="stylesheet" />
    <link href="~/Content/alertifyjs/themes/default.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.css">
    <link href="~/Content/general.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/jquery")
</head>
<body>
    <nav class="navbar navbar-expand-lg fixed-top" style="background-color: white;box-shadow: 2px 2px 12px rgba(47, 47, 47, 0.40);">
        <a href="@Url.Action("Index","Home")">
            <img src="~/Content/Images/HDQ LOGO FINAL.png" style="height:30px;max-width:50px" />
        </a>
        
        <ul class="navbar-nav flex-row ml-auto">
            <li class="nav-item">

                <a class="nav-link navbar-link" href="@Url.Action("Dashboard","Customer")">
                    <img src="~/Content/Images/user-black.svg" />
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link navbar-link" href="@Url.Action("ViewCart","Cart")">
                    <img src="~/Content/Images/shopping-black.svg" />
                    @Html.Partial("~/Views/Cart/_navbarCartNumber.cshtml")
                </a>
            </li>
        </ul>
        <button class="navbar-toggler collapsed position-relative" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span></span>
            <span></span>
            <span></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            @using (Html.BeginForm("SearchShop", "Product", FormMethod.Post, new { @class = "card card-sm ml-auto search-form" }))
            {
                <div class="row no-gutters align-items-center navbar-search-div">
                    <!--end of col-->
                    <div class="col">
                        <input class="form-control form-control-sm form-control-borderless" type="search" placeholder="Search here" style="width:100%" name="query">
                    </div>
                    <!--end of col-->
                    <div class="col-auto">
                        <button class="btn btn-sm navbar-search-button" type="submit">
                            <img src="~/Content/Images/search.svg" />
                        </button>
                    </div>
                    <!--end of col-->
                </div>
            }

            <ul class="navbar-nav">
                <li class="nav-item">
                    @Html.ActionLink("Shop", "Index", "Product", new { area = "" }, new { @class = "nav-link navbar-link" })
                </li>
                <li class="nav-item dropdown mr-md-2 navbar-category">
                    <a class="nav-link navbar-link dropdown-toggle" id="navbarCategoriesDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <span class="navbar-category-name">Categories</span>
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarCategoriesDropdown">
                        @Html.Partial("~/Views/Home/_navbarCategories.cshtml")
                    </div>

                </li>
            </ul>

            @Html.Partial("_LoginPartial")
        </div>
    </nav>
    <div style="background-color:white">
        @RenderBody()
        <div id="sidenav" class="sidenav">
            <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
            <div id="sidebarbody" style="padding:10px 20px;"></div>
        </div>

        <div id="snackbar-success"></div>
        <div id="snackbar-error"></div>
        <div id="snackbar-message"></div>
    </div>

    <footer style="max-width:100vw;overflow-x:hidden">
        @Html.Partial("_footer")
    </footer>


    <!--modals-->
    <!--quick view product-->
    <div class="modal fade" id="productQuickView">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header" style="padding:5px 10px">
                    <a href="#" class="close" data-dismiss="modal">&times;</a>
                </div>
                <div class="modal-body" id="productQuickViewBody">


                </div>


            </div>

        </div>

    </div>



    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/alertify.min.js"></script>
    <script src="~/Content/js/site.js"></script>

</body>
</html>


<style>
  .form-control-borderless {
    border: none;
}

.form-control-borderless:hover, .form-control-borderless:active, .form-control-borderless:focus {
    border: none;
    outline: none;
    box-shadow: none;
}

    .navbar-search-div {
        padding: 1px;
        border: 1px solid #a6adad;
    }

    .navbar-search-button {
        color: white;
        border-radius: 0;
        transition: all ease 0.3s;
        background-color: #df7204;
    }

     .navbar-search-button:hover{
        background-color:#9c3b8d;
        color:white;
    }

     .navbar-category-name:hover{
         color:#df7204;
     }
   
    /*screens less than md*/
@@media screen and (min-width:991px) {
    .search-form{
         width:50%;
         margin-right:10px;
     }
}
</style>