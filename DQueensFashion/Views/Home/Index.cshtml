@model DQueensFashion.Models.HomeIndexViewModel
@using DQueensFashion.Models

@{
    ViewBag.Title = "Home Page";
}
<p>@ViewBag.WishListCount</p>

<div class="row pt-5">
    @foreach (var product in Model.Products)
    {
        <div class="col-md-3">
            <div class="card">
                <img class="card-img-top" src="@Url.Content(product.Image1)" style="height:250px">
                <div class="card-block">
                    <h4 class="card-title">@product.Name</h4>
                    <div class="meta">
                        <a href="#">@product.Price</a>
                    </div>
                    <div class="card-text">
                        @product.Description
                    </div>
                </div>
                <div class="card-footer">
                    <span class="float-right" onclick="AddToCart(@product.Id)" style="cursor:pointer">Cart</span>
                    <span class="float-right" onclick="AddToWishList(@product.Id)" style="cursor:pointer">Add to wish list | </span> 
                    <span><i class=""></i>@product.Quantity</span>
                </div>
            </div>
        </div>
    }

</div>

<style>
.card {
    font-size: 1em;
    overflow: hidden;
    padding: 0;
    border: none;
    border-radius: .28571429rem;
    box-shadow: 0 1px 3px 0 #d4d4d5, 0 0 0 1px #d4d4d5;
}

.card-block {
    font-size: 1em;
    position: relative;
    margin: 0;
    padding: 1em;
    border: none;
    border-top: 1px solid rgba(34, 36, 38, .1);
    box-shadow: none;
}

.card-img-top {
    display: block;
    width: 100%;
    height: auto;
}

.card-title {
    font-size: 1.28571429em;
    font-weight: 700;
    line-height: 1.2857em;
}

.card-text {
    clear: both;
    margin-top: .5em;
    color: rgba(0, 0, 0, .68);
}

.card-footer {
    font-size: 1em;
    position: static;
    top: 0;
    left: 0;
    max-width: 100%;
    padding: .75em 1em;
    color: rgba(0, 0, 0, .4);
    border-top: 1px solid rgba(0, 0, 0, .05) !important;
    background: #fff;
}
.text-bold {
    font-weight: 700;
}

.meta {
    font-size: 1em;
    color: rgba(0, 0, 0, .4);
}

.meta a {
    text-decoration: none;
    color: rgba(0, 0, 0, .4);
}

.meta a:hover {
    color: rgba(0, 0, 0, .87);
}
</style>