</div>
<div class="container pb-3">
    <div class="row">
        <div class="col-12">
            <div class="section_header" style="margin-bottom:1px">
                <div class="section_header_text">
                    <h2 style="margin-top: 15px;">BEST SELLING PRODUCTS</h2>
                </div>
            </div>
            <div class="row mt-3">
                @{
                    foreach (var product in Model.BestSellingProducts)
                    {
                        <div class="col-lg-3 col-6">
                            @Html.Partial("~/Views/Product/_productCard.cshtml", product)
                        </div>
                    }
                }
            </div>
            <button class="btn secondary-button" onclick="ShopByBestSelling()">View more</button>
        </div>
    </div>
</div>


<style>

    .custommade-header {
        font-weight: 700;
        color: #212529;
        margin-bottom: 20px;
    }

    .readymade-header {
        font-weight: 700;
        color: #212529;
        margin-bottom: 20px;
    }

    .primary-button {
        border-radius: 0;
        color: white;
        background-color: #96157a;
    }


        .primary-button:hover {
            transform: scale(1.01);
            background-color: rgb(255, 101, 5);
            box-shadow: 2px 2px 12px rgba(47, 47, 47, 0.40);
            transition: all ease 0.3s;
            color: white;
        }


    .secondary-button {
        background-color: #df7204;
        color: white;
        border-radius: 0;
    }

        .secondary-button:hover {
            color: white;
            transform: scale(1.01);
            background-color: #394047;
            box-shadow: 2px 2px 12px rgba(47, 47, 47, 0.40);
            transition: all ease 0.3s;
        }

    /* -------------------------------------------------
          min-width: 992px
        ---------------------------------------------------*/
    @@media only screen and (min-width: 992px) {
        .navbar-toggler {
            display: none;
        }
    }
    /* -------------------------------------------------
          max-width: 991px
        ---------------------------------------------------*/
    @@media only screen and (max-width: 991px) {


        #categoriesMenuBar {
            position: absolute;
            right: 0;
            top: 100%;
            z-index: 999;
            display: block;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0,0,0,0.2);
            padding: 15px;
            opacity: 0;
            visibility: hidden;
            height: auto !important;
        }

            #categoriesMenuBar.show {
                opacity: 1;
                visibility: visible;
                margin-top: 0;
            }

            #categoriesMenuBar li a {
                text-align: left;
            }


        .custommade-section,
        .readymade-section {
            margin-top: 30px;
        }
    }
</style>
