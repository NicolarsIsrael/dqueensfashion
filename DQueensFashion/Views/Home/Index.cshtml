<div class="container pb-3">
    <div class="row">
        <div class="col-12">
            <div class="section_header mb-1">
                <div class="section_header_text">
                    <h2 class="home-bestdeals-header">BEST DEALS</h2>
                </div>
            </div>
            <div class="row mt-3">
                @{
                    foreach (var product in Model.BestDealsProducts)
                    {
                        <div class="col-lg-3 col-6">
                            @Html.Partial("~/Views/Product/_productCard.cshtml", product)
                        </div>
                    }
                }
            </div>
            <button class="btn secondary-button" onclick="ShopByBestDeals()">View more</button>
        </div>
    </div>
</div>



<div class="container mt-2 pb-3">
    <div class="row">
        <div class="col-12">
            <div class="section_header mb-1">
                <div class="section_header_text">
                    <h2  class="home-bestselling-header">BEST SELLING PRODUCTS</h2>
                </div>
            </div>
            <div class="row mt-3">
                @{
                    foreach (var product in Model.BestSellingProducts)
                    {
                        <div class="col-lg-3 col-6">
                            @Html.Partial("~/Views/Product/_productCard.cshtml", product)
                        </div>
                    }
                }
            </div>
            <button class="btn secondary-button" onclick="ShopByBestSelling()">View more</button>
        </div>
    </div>
</div>

<script>
    function ShopByBestSelling() {
    window.location.href = "/Product/Shop?sort=" + @AppConstant.BestSelling;
}

function ShopByBestDeals() {
    window.location.href = "/Product/Shop?sort=" + @AppConstant.BestDeals;
}
</script>