@model DQueensFashion.Models.ChangePasswordViewModel

@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_dashboardLayout.cshtml";
}
<div class="row mt-3">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <div>
                    CHANGE PASSWORD
                </div>
            </div>
            <div class="card-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.OldPassword, htmlAttributes: new { @class = "control-label col-12" })
                            <div class="col-12">
                                @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control", @id = "OldPasswordInput" })
                            </div>
                            <div class="showpasswordcontainer">
                                <span class="col-12 showoldpassword" onclick="ShowOldPassword()">
                                    <span id="old-password-show-text" class="old-password-show-text">show</span>
                                </span>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.NewPassword, new { @class = "col-12 control-label" })
                            <div class="col-12">
                                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", @id = "passwordInput" })
                            </div>
                            <div class="showpasswordcontainer">
                                <span class="col-12 showpassword" onclick="ShowPassword()">
                                    <span id="password-show-text" class="password-show-text">show</span>
                                </span>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-12 control-label" })
                            <div class="col-12">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", id = "ConfirmPasswordInput" })
                                @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                            </div>
                            <div class="showpasswordcontainer">
                                <span class="col-12 showconfirmpassword" onclick="ShowConfirmPassword()">
                                    <span id="confirm-password-show-text" class="confirm-password-show-text">show</span>
                                </span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-12">
                                <input type="submit" value="Change password" class="btn" style="color:white;background-color:#df7204;border-radius:0" />
                            </div>
                        </div>

                    </div>
                }
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
