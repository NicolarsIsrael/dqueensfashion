@model DQueensFashion.Models.AddReviewViewModel

<script src="~/Content/js/jquery.js"></script>
@{
    ViewBag.Title = "Add Review";
    Layout = "~/Views/Shared/_dashboardLayout.cshtml";
}
<div class="container body-content">
    <div class="card box-shadow">
        <div class="card-body">
            <div class="row">
                <div class="col-3 col-md-2">
                    <img src="@Url.Content(Model.ProductImage)" style="display:inline-block;width:100%;height:80px" alt="@Model.ProductName image_houseofdqueens"/>
                </div>
                <div class="col-9 col-md-10" style="word-break:break-word">
                    <div class="product-title">@Model.ProductName</div>
                    <div class="product-category">@Model.ProductCategory</div>
                </div>
            </div>
        </div>
    </div>
    <div class="card box-shadow mb-3 mt-2">
        <div class="card-header" style="background-color:white">
            <div style="text-align:right">
                <h5>ADD REVIEW</h5>
            </div>
        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    @Html.HiddenFor(model => model.ProductId)
                    @Html.HiddenFor(model => model.ProductName)
                    @Html.HiddenFor(model => model.ProductCategory)
                    @Html.HiddenFor(model => model.ProductImage)
                    @Html.HiddenFor(model => model.LineItemId)


                    <input hidden name="Rating" id="rating-value" value="1" />
                    <div class="form-group">
                        <div class="col-12">
                            @Html.LabelFor(model => model.Rating, htmlAttributes: new { @class = "control-label" }) :
                            <span class="text-warning">
                                <i class="fas fa-star rating-star" data-value="1"></i>
                                <i class="far fa-star rating-star" data-value="2"></i>
                                <i class="far fa-star rating-star" data-value="3"></i>
                                <i class="far fa-star rating-star" data-value="4"></i>
                                <i class="far fa-star rating-star" data-value="5"></i>
                            </span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <div class="form-group">
                                <div class="col-12">
                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Name" } })
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-12">
                            @Html.TextAreaFor(model => model.Comment, new { @class = "form-control", @rows = 5, @placeholder = "Commment" })
                            @Html.ValidationMessageFor(model => model.Comment, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <button type="submit" class="btn" style="background-color:#df7204;color:white">
                                <img src="~/Content/Images/plus.svg" alt="add_review_btn_image houseofdqueens"/>
                                Add
                            </button>
                        </div>
                    </div>

                </div>
            }
        </div>
    </div>
</div>

<style>
    .review-product-image {
        width: 100%;
        height: 100px;
    }

    .product-title {
        font-weight: 700;
        font-size: 16px;
        margin-bottom: 5px;
    }

    .product-category {
        font-size: 13px;
        font-weight: 400;
    }
</style>

<script>
    $(".rating-star").click(function () {
        $(".rating-star").addClass("far").removeClass("fas");

        $(this).prevAll(".rating-star").addClass("fas").removeClass("far");
        $(this).addClass("fas").removeClass("far");

        var starValue = $(this).attr("data-value");
        $("#rating-value").val(starValue);
    });
</script>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
