@model IEnumerable<DQueensFashion.Models.ViewOrderViewModel>

@{
    ViewBag.Title = "Orders";
    Layout = "~/Views/Shared/_dashboardLayout.cshtml";
}



<div class="row">
    <div class="col-12">
        <div class="card box-shadow">
            <div class="card-header">
                <h3 class="card-title">All orders</h3>

                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control float-right" id="search" placeholder="Search">

                        <div class="input-group-append">
                            <button type="submit" class="btn btn-default" style="width:50px" onclick="SearchOrderTable()">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0" style="height: 78vh">

                @Html.Partial("_ordersTable", Model)
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>




<script>
    var search = document.getElementById("search");

    function SearchOrderTable() {
        $.ajax({
            url: '/Customer/SearchOrders',
            dataType: "html",
            data: { query: search.value },
            success: function (result) {

                $("#ordersTable").html(result);
            },
            error: function (xhr, status, error) {
                ShowSnackbarError("Error");
            }
        });
    }

</script>