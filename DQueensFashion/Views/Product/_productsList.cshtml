@model IEnumerable<DQueensFashion.Models.ViewProductsViewModel>
<div id="productsList">
    <div class="container">
        <div id="loading-effect" class="loading-effect">
            <div id="loading-text" class="loading-text">
                <h5>
                    Loading...
                </h5>
            </div>
        </div>
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-lg-3 col-6">
                    @Html.Partial("~/Views/Product/_productCard.cshtml", product)
                </div>
            }
            @{
                if (Model.Count() == 0)
                {
                    <h4>No item</h4>
                }
            }
        </div>

        @Html.Partial("_productListPagination")
    </div>
</div>
    