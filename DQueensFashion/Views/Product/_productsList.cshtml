@model IEnumerable<DQueensFashion.Models.ViewProductsViewModel>
<div id="productsList">
    <div class="container">
        <div id="loading-effect" class="loading-effect">
            <div id="loading-text" class="loading-text">
                <h5>
                    Loading...
                </h5>
            </div>
        </div>
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-lg-3 col-6">
                    @Html.Partial("~/Views/Product/_productCard.cshtml", product)
                </div>
            }
            @{
                if (Model.Count() == 0)
                {
                    <h4>No item</h4>
                }
            }
        </div>

        @Html.Partial("_productListPagination")
    </div>
</div>


<style>
    .loading-effect {
        position: fixed;
        display: none;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: rgba(0,0,0,0.5);
        z-index: 2;
        cursor: pointer;
    }

    .loading-text {
        position: absolute;
        top: 50%;
        left: 50%;
        font-size: 50px;
        color: white;
        transform: translate(-50%,-50%);
        -ms-transform: translate(-50%,-50%);
    }
</style>