@model DQueensFashion.Models.ProductIndexViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="mt-2"></div>
<input type="text" class="form-control" id="searchString" />
<input type="button" class="btn btn-secondary mt-1" value="SEARCH" onclick="SearchProduct()" />

<div id="productsList">
    <div class="row pt-5" id="">
        @foreach (var product in Model.Products)
        {
            <div class="col-md-3">
                <div class="card">
                    <img class="card-img-top" src="@Url.Content(product.Image1)" style="height:250px">
                    <div class="card-block">
                        <h4 class="card-title">@product.Name</h4>
                        <div class="meta">
                            <a href="#">@product.Price</a>
                        </div>
                        <div class="card-text">
                            @product.Description
                        </div>
                    </div>
                    <div class="card-footer">
                        <span class="float-right" onclick="AddToCart(@product.Id)" style="cursor:pointer">Cart</span>
                        <span class="float-right" onclick="AddToWishList(@product.Id)" style="cursor:pointer">Add to wish list | </span>
                        <span><i class=""></i>@product.Quantity</span>
                    </div>
                </div>
            </div>
        }

    </div>
</div>

<script>

    var searchString = document.getElementById("searchString");

    function SearchProduct(productId) {

        $.ajax({
            url: '/product/searchproduct?searchString=' + searchString.value,
            dataType: "html",
            data: { id: productId },
            success: function (result) {
                $("#productsList").html(result);
            },
            error: function (xhr, status, error) {
                alert("Error");
            }
        });

    }
</script>