@model DQueensFashion.Models.ProductIndexViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="mt-2"></div>
<input type="text" class="form-control" id="searchString" />
<select class="form-control" id="sortString">
    <option value="1">Best selling</option>
    <option value="2">Alphabetically, A - Z</option>
    <option value="3">Alphabetically, Z - A</option>
    <option value="4">Price, low to high</option>
    <option value="5">Price, high to low</option>
    <option value="6">Date, new to old</option>
    <option value="7">Date, old to new</option>
</select>
<input type="button" class="btn btn-secondary mt-1" value="SEARCH" onclick="SearchProduct()" />

<div id="productsList">
    <div class="row pt-5" id="">
        @foreach (var product in Model.Products)
        {
            <div class="col-md-3">
                <div class="card">
                    <img class="card-img-top" src="@Url.Content(product.Image1)" style="height:250px">
                    <div class="card-block">
                        <h4 class="card-title">@product.Name</h4>
                        <div class="meta">
                            <a href="#">@product.Price</a>
                        </div>
                        <div class="card-text">
                            @product.Description
                        </div>
                    </div>
                    <div class="card-footer">
                        <span class="float-right" onclick="AddToCart(@product.Id)" style="cursor:pointer">Cart</span>
                        <span class="float-right" onclick="AddToWishList(@product.Id)" style="cursor:pointer">Add to wish list | </span>
                        <span><i class=""></i>@product.Quantity</span>
                    </div>
                </div>
            </div>
        }
        @{ 
            if (Model.Products.Count() == 0)
            {
                <h4>No item</h4>
            }
        }
    </div>
</div>

<script>

    var _searchString = document.getElementById("searchString");
    var _sortString = document.getElementById("sortString");
    function SearchProduct() {

        $.ajax({
            url: '/product/searchproduct',
            dataType: "html",
            data: { searchString: _searchString.value, sortString: _sortString.value },
            success: function (result) {
                $("#productsList").html(result);
            },
            error: function (xhr, status, error) {
                alert("Error");
            }
        });

    }
</script>