@model DQueensFashion.Models.ViewProductsViewModel
@using DQueensFashion.Utilities

<div class="product-box">
    <div onclick="NavigateToProductDetails(@Model.Id)" style="cursor:pointer">
        <div class="product-time-label">New</div>
        @if (Model.Discount > 0)
        {
            <div class="product-discount-label">@Model.Discount% off</div>
        }
        <div class="img-box">
            <img src="@Url.Content(Model.MainImage)">
        </div>
    </div>
    <div class="product-details">
        <div onclick="NavigateToProductDetails(@Model.Id)" style="cursor:pointer">
            <div class="product-title">@Model.Name</div>
            <div class="product-category">@Model.Category</div>
            @if (Model.Discount > 0)
            {
                <span class="product-initial-price">$@Model.Price</span>
            }
            <span class="product-price">$@Model.SubTotal</span>
        </div>
        <div class="mb-1">
            @Html.Partial("~/views/Product/_averageRating.cshtml", Model.Rating)
            <span class="float-right">
                @*<i class="far fa-eye product-quickview" onclick="productQuickView(@Model.Id)"></i>*@
                <i class="far fa-heart product-wishlist" onclick="AddToWishList(@Model.Id)"></i>

            </span>
        </div>
        @{
            if (Model.CategoryId != AppConstant.CustomMadeCategoryId)
            {
                <div class="cart" onclick="AddToCart(@Model.Id)">
                    <div href="#">Add to cart</div>
                </div>
            }
            else
            {
                <div class="cart" onclick="AddToCartCustomMade(@Model.Id)">
                    <div href="#">Add to cart</div>
                </div>
            }
        }

    </div>

</div>



<!--modals-->
<!--add to cart custom made-->
<div class="modal fade" id="addToCartCustomMade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="padding:5px 10px">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
            </div>
            <div class="modal-body" id="addToCartCustomMadeBody">


            </div>


        </div>

    </div>

</div>