@model DQueensFashion.Models.RatingViewModel

@{
    for (int i = 1; i <= Model.FloorAverageRating; i++)
    {
        <span class="fas fa-star star-rating"></span>
    }
    if (Model.IsDouble)
    {
        <span class="fas fa-star-half-alt star-rating"></span>

        for (int i = 1; i <= (4 - Model.FloorAverageRating); i++)
        {
            <span class="far fa-star star-rating"></span>
        }
    }
    else
    {
        for (int i = 1; i <= (5 - Model.FloorAverageRating); i++)
        {
            <span class="far fa-star star-rating"></span>
        }
    }

    if (Model.FloorAverageRating >= 1)
    {
        <span class="product-average-rating">@Model.AverageRating</span>
    }
}
