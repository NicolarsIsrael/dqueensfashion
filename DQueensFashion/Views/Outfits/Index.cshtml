@model IEnumerable<DQueensFashion.Models.OutfitSampleViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container body-content">
    <div class="section_header mb-1">
        <div class="section_header_text">
            <h2 class="home-bestselling-header">Outfit samples</h2>
        </div>
    </div>
    <div class="card box-shadow my-3">
        <div class="card-body">
            <div style="text-align:center">
                <a href="@Url.Action("Index","ContactUs")">Contact us</a> to make an outfit like this
            </div>
        </div>
    </div>
    <div class="row">
        @foreach (var sample in Model)
        {
            <div class="col-md-4 col-lg-3">
                <a href="@Url.Action("ViewOutfit","Outfits",new { id=sample.SampleId})">
                    <img src="@Url.Content(sample.MainPath)" alt="@sample.SampleName _image_houseofdqueens" style="height:300px;width:100%" class="p-1" />
                </a>
                <div style="word-break:break-word;font-size:15px;font-weight:400" class="px-2">
                   aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa @*@sample.SampleName*@
                </div>
            </div>
        }
    </div>
</div>

